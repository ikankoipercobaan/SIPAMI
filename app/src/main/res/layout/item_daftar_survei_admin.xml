<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#BBBCB7"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Fixed Label "Nama Sensus" -->
            <TextView
                android:id="@+id/textViewNamaSurvei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="10sp"
                android:text="Nama Sensus"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewKodeSurvei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="10sp"
                android:text="(Kode)"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Kirim Button -->

            <TextView
                android:id="@+id/textViewTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="10sp"
                android:text="Waktu Survey"
                android:textSize="15sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/buttonDetailSurvei"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="5dp"
                android:backgroundTint="#8F692F"
                android:text="Detail Survei"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
