<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="10dp"
    android:backgroundTint="#BBBCB7"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_gravity="center"
            android:layout_width="115dp"
            android:layout_height="133dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profil4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Nama: John Doe"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nikTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Nik/Nip: 123456789"
                android:textSize="14sp" />

            <Button
                android:id="@+id/detailButton"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#8F692F"
                android:onClick="onDetailButtonClick"
                android:text="Lihat Detail" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
